include ../Makefile.inc
top_builddir = @top_builddir@

all: mod_mapcache.la

install: mod_mapcache.la
	#$(APXS) -i -a -n mapcache mod_mapcache.la
	$(APXS) -g -n mapcache mod_mapcache.la

mod_mapcache.la:  mod_mapcache.c
	@if test ! -f $(DESTDIR)$(libdir)/libmapcache.la; then echo "$(DESTDIR)$(libdir)/libmapcache.la not found, please install before building the mapcache apache module"; exit 1; fi
	$(APXS) -Wc,"$(ALL_ENABLED) $(CFLAGS) $(INCLUDES)" -Wl,"$(LIBS)" -c mod_mapcache.c $(DESTDIR)$(libdir)/libmapcache.la
	
clean:
	rm -f *.o
	rm -f *.so
	rm -f *.slo
	rm -f *.lo
	rm -rf .libs
	rm -f *.la
	rm -f *.sla
	rm -rf *.dSYM

